pipeline {
    agent any
    
    environment{
        imagename = "ramesh131/java-repo"
        dockerImage = ''
        PATH = "/opt/maven/bin:$PATH"
        DOCKER_HUB_CREDENTIAL="DOCKER_HUB_CREDENTIAL"
    }
    stages {
         stage('Git Clone') { 
            steps {
                git credentialsId: 'GIT_HUB_CREDENTIAL', url: 'https://github.com/rameshk131/java-springboot.git', branch: 'master'
            }
        }
        stage('Build') { 
            steps {
                sh "mvn clean install"
            }
        }
        // stage('Docker Build') { 
        //     steps {
                
        //         sh "docker version"
        //         sh "docker build -t java-repo ."
        //         sh "docker image list"
        //         sh "docker tag java-repo ramesh131/java-repo:java-repo"
        //     }
        // }
        stage('Docker Build') { 
            steps {
                script{
                    dockerImage = docker.build("${env.imagename}:v${env.BUILD_NUMBER}")
                }
            }
        }
         stage('Push Image to Docker Hub') { 
            steps {
                script{
                    docker.withRegistry('', DOCKER_HUB_CREDENTIAL) {
                            dockerImage.push()
                            dockerImage.push('latest')
                    }
                }
            }
        }
        
        stage('Eks Deployment') { 
            steps {
                sh "kubectl apply -f deployment.yaml"
            }
        }

    }
    
}